<nav aria-label="...">
    <ul class="pagination">
        {% if page == first %}
        <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1"
                aria-disabled="true">Trước</a>
        </li>
        {% else %}
        <li class="page-item">
            <a class="page-link" href="?limit={{ limit }}&page={{ page-1 }}">Trước</a>
        </li>
        {% endif %}

        {% for p in range(first, last) %}
        <li class="page-item {{ p == page ? 'active' : '' }}">
            <a class="page-link" href="?limit={{ limit }}&page={{ p }}">{{ p }}</a>
        </li>
        {% endfor %}
       
        {% if page == last %}
        <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1"
                aria-disabled="true">Kế tiếp</a>
        </li>
        {% else %}
        <li class="page-item">
            <a class="page-link" href="?limit={{ limit }}&page={{ page+1 }}">Kế tiếp</a>
        </li>
        {% endif %}
    </ul>
</nav>