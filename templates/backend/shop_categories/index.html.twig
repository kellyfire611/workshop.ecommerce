{# Kế thừa layout backend #}
{% extends "backend/layouts/layout.html.twig" %}

{# Nội dung trong block title #}
{% block title %}
Danh sách Chuyên mục
{% endblock %}
{# End Nội dung trong block title #}

{# Nội dung trong block headline #}
{% block headline %}
Danh sách Chuyên mục
{% endblock %}
{# End Nội dung trong block headline #}

{# Nội dung trong block content #}
{% block content %}
<!-- Nút thêm mới, bấm vào sẽ hiển thị form nhập thông tin Thêm mới -->
<a href="create" class="btn btn-primary">
    <span data-feather="plus"></span> Thêm mới
</a>
<!-- Nút import dữ liệu -->
<a href="import" class="btn btn-success">
    <span data-feather="plus"></span> Import dữ liệu
</a>
<table class="table table-bordered table-hover mt-2">
    <thead class="thead-dark">
        <tr>
            <th>Ảnh đại diện</th>
            <th>Mã chuyên mục</th>
            <th>Tên chuyên mục</th>
            <th>Mô tả chuyên mục</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        {% for category in categories.data %}
        <tr>
            <td>
                <img src="/assets/uploads/{{ category.image }}" class="img-thumbnail"/>
            </td>
            <td>{{ category.category_code }}</td>
            <td>{{ category.category_name }}</td>
            <td>{{ category.description }}</td>
            <td>
                <!-- Nút sửa, bấm vào sẽ hiển thị form hiệu chỉnh thông tin dựa vào khóa chính `id` -->
                <a href="edit?id={{ category.id }}" class="btn btn-warning">
                    <span data-feather="edit"></span> Sửa
                </a>

                <!-- Nút xóa, bấm vào sẽ xóa thông tin dựa vào khóa chính `id` -->
                <a href="delete?id={{ category.id }}" class="btn btn-danger">
                    <span data-feather="delete"></span> Xóa
                </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{{ paginator.createLinks()|raw }}

{% endblock %}
{# End Nội dung trong block content #}